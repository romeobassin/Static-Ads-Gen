{
  "name": "generate_feature_highlight",
  "description": "Generate feature highlight advertisement copy for an image",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Template identifier",
        "enum": ["feature_highlight"]
      },
      "headline": {
        "type": "string",
        "description": "Main headline text for the advertisement"
      },
      "features": {
        "type": "array",
        "description": "Array of feature highlights",
        "items": {
          "type": "string",
          "description": "Feature description text"
        },
        "minItems": 1,
        "maxItems": 3
      },
      "price": {
        "type": "string",
        "description": "Price information text"
      },
      "cta_text": {
        "type": "string",
        "description": "Call to action text"
      }
    },
    "required": ["id", "headline", "features", "price", "cta_text"]
  }
}